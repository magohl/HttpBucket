@page "{bucketid:guid}"
@model IndexModel

<div class="container">
    <div>
        <h2>HTTP Bucket</h2>
        <p>Created @Model.Created.ToString("yyyy-MM-dd HH:mm:ss")</p>
        <p>Make a HTTP request (GET/POST/PUT/DELETE) to <a href="@Request.Scheme://@Request.Host/@Model.BucketId/whatever-url" target="_blank"><b>@Request.Scheme://@Request.Host/@Model.BucketId/whatever-url</b></a> and the request show up below!</p>
        <p>Return something different than HTTP/200? Specify the desired code like this @Request.Scheme://@Request.Host/<b>204</b>/@Model.BucketId/someurl</p>
        <hr>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table" id="messagesList">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Received</th>
                    <th scope="col">Method</th>
                    <th scope="col">Path</th>
                    <th scope="col">Headers</th>
                    <th scope="col">Ret.StatusCode</th>
                    <th scope="col">Body</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.HistoricEntries.OrderByDescending(o=>o.Received))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Received</td>
                        <td>@item.Method</td>
                        <td>@item.Path</td>
                        <td><i class="fas fa-list" title="@item.Headers"></i></td>
                        <td>@item.StatusCodeToReturn</td>
                        <td>@item.Body</td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>
</div>